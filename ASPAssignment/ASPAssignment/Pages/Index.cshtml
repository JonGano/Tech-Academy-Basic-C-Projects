@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #myContainer {
            width: 550px;
            height: 550px;
            position: relative;
            background: yellow;
        }

        #myAnimation {
            width: 50px;
            height: 50px;
            position: absolute;
            background-color: red;
        }
    </style>
</head>
<body>

    <p>
        <button onclick="myMove()">Click Me</button>
    </p>

    <div id="myContainer">
        <div id="myAnimation">
            <iframe width="100" height="100" src="https://youtube.com/embed/Gxe40xXQKko"></iframe>
        </div>
    </div>


    <script>

        var id = null;
        function myMove() {
            var elem = document.getElementById("myAnimation");
            var pos = 0;
            clearInterval(id);
            id = setInterval(frame, 30);
            function frame() {
                if (pos == 440) {
                    clearInterval(id);
                } else {
                    pos++;
                    elem.style.top = pos + 'px';
                    elem.style.left = pos + 'px';
                    setTimeout(moveBack, 13300);
                }
            }
            function moveBack() {
                pos--;
                elem.style.top = pos + 'px';
                elem.style.left = pos + 'px';
                setTimeout(moveDown, 13300)
            }
            function moveDown() {
                pos++;
                elem.style.top = pos + 'px';
                setTimeout(moveUp, 13300);
            }
            function moveUp() {
                pos--;
                elem.style.top = pos + 'px';
                setTimeout(moveDiag, 13300);
            }
            function moveDiag() {
                pos++;
                elem.style.top = pos + 'px';
                elem.style.left = pos + 'px';
                setTimeout(moveBack, 13300);
            }
            function moveBack() {
                pos--;
                elem.style.top = pos + 'px';
                elem.style.left = pos + 'px';
                setTimeout(moveDown, 13300)
            }
            function moveDown() {
                pos++;
                elem.style.top = pos + 'px';
                setTimeout(moveUp, 13300);
            }
            function moveUp() {
                pos--;
                elem.style.top = pos + 'px';
                setTimeout(moveDiag, 13300);
            }
        }
    </script>

</body>
</html>